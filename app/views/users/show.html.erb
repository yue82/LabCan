<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <%= image_tag icon_for(@user), size: '80' %>

      <%= @user.comment %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if current_user?(@user) %>
      <%= render "comment_form" %>
      <br>
      <p>Your token: <code><%= @user.check_token %></code></p>
      <%= render "token_update_form" %>
    <% end %>
  </div>
</div>
