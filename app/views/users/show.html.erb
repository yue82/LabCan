<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <%= image_tag icon_for(@user), size: '80' %>

      <%= @user.comment %>
      <br>
      <br>

      <% if current_user?(@user) %>
	<%= render "comment_form" %>
        <br>
        <p>Your check in token: <%= @user.check_token %></p>
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>
          <%= f.hidden_field :check_token, class: 'form-control' %>
          <%= f.submit 'Update token', class: "btn btn-primary" %>
          <% end %>
      <% else %>
	<%= @user.comment %>
      <% end %>
    </section>
  </aside>
</div>
